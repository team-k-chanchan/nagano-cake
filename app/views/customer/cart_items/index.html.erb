<div class="container">
    <div class="row">
        <div class="col-md-4 offset-2">
            <h2>ショッピングカート</h2>
        </div>
        <div class="col-md-4 offset-2">
            <% if current_customer.cart_items.present? %>
              <%= link_to "カートを空にする", destroy_all_customer_cart_items_path(@cart_item), method: :delete, class: "btn btn-danger" %>
            <% end %>
        </div>
    </div>
    <% if current_customer.cart_items.present? %>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <table class="table table-bordered">
                    <tr class="thead-right">
                        <th class="table-active">商品名</th>
                        <th class="table-active">単価(税込み)</th>
                        <th class="table-active">数量</th>
                        <th class="table-active">小計</th>
                        <th class="table-active"></th>
                    </tr>
                     <% @cart_items.each do |cart_item| %>
                        <tr>
                            <td>
                                <div class="form-inline">
                                    <%= attachment_image_tag cart_item.item, :image, fallback: "no-image.jpg", size:"50x50" %>
                                        <p class="ml-3 mb-0">
                                            <%= cart_item.item.name %>
                                        </p>
                                </div>
                            </td>
                            <td>
                                <div class="form-inline">
                                    <p class="mt-2">
                                        <%= tax_price(cart_item.item.price).to_s(:delimited) %>
                                    </p>
                                </div>
                            </td>
                            <td>
                                <div class="form-inline">
                                    <p class="mb-0 mt-2">
                                        <% cart_item.count %>
                                    </p>
                                    <%= form_with model: cart_item, url: customer_cart_item_path(cart_item), method: :patch do |f| %>
                                    <%= f.number_field :count, class: "ml-3 mt-2", max: 10, min: 1 %>
                                    <%= f.submit :"変更", class: "btn btn-success btn-sm" %>
                                    <% end %>
                                </div>
                            </td>
                            <td>
                                <p class="mt-2">
                                    <%= sub_price(cart_item).to_s(:delimited) %>
                                </p>
                            </td>
                            <td>
                                <div>
                                    <%= link_to "削除", customer_cart_item_path(cart_item), method: :delete, class: "btn btn-danger btn-sm mt-2" %>
                                </div>
                            </td>
                        </tr>
                    <% end %>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 offset-2">
                <%= link_to "買い物を続ける", customer_items_path, class: "btn btn-primary" %>
            </div>
            <div class="col-md-4">
                <table class="table table-bordered">
                    <tr>
                        <th class="table-active" style="width: 40%">合計金額</th>
                        <td>
                            <%= total_price(@cart_items).to_s(:delimited) %>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p class="text-center">
                    <%= link_to "情報入力に進む", new_customer_order_path, class: "btn btn-success" %>
                </p>
            </div>
        </div>
        <% else %>
            <div class="row">
                <div class="col-md-12">
                    <h3 class="text-center">カートは空です。</h3>
                    <div class="col-md-12">
                        <p class="text-center">
                            <%= link_to "商品一覧ページへ", customer_items_path, class: "btn btn-primary" %>
                        </p>
                    </div>
                </div>
            </div>
        <% end %>
</div>