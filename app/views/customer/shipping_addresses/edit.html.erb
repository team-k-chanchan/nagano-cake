<% provide(:title, "配送先編集") %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="head-line text-center mt-4 mb-4">配送先編集</h2>
      <%= form_with(model: @shipping_address, url:customer_shipping_address_path, local: true ,method: :patch) do |f| %>
      <div class="form-group text-center">
        <div class="form-group text-center">
        <%= f.label :"郵便番号(ハイフンなし)",class: "control-label" %>
        <%= f.text_field :postal_code ,class: "form-control-static postal_code" %>
        </div>
        <div class="form-group text-center">
        <%= f.label :"住所" ,class: "control-label" %>
        <%= f.text_field :shipping_address ,class: "form-control-static address" %>
        </div>
        <div class="form-group text-center">
        <%= f.label :"宛名" ,class: "control-label" %>
        <%= f.text_field :name ,class: "form-control-static name" %>
        </div>
        <div class="form-group text-center">
        <%= f.submit '編集する' ,class: "col-xs-2 btn btn-primary btn-lg pull-right" %>
        </div>
        <% end %>
        <div class="shipping-back col-xs-12">
        <%= link_to "配送先登録/一覧へ戻る", customer_shipping_addresses_path, data: {"turbolinks" => false}, class: "btn btn-info" %>
        </div>
      </div>
    </div>
  </div>
</div>