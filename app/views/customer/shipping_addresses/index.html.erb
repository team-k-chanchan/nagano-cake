<% provide(:title, "配送先登録/一覧") %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="head-line text-center mt-4 mb-4">配送先登録/一覧</h2>
      <%= form_with(model: @shipping_address, url:customer_shipping_addresses_path, local: true ) do |f| %>
      <div class="form-group text-center">
        <%= f.label :"郵便番号(ハイフンなし)" ,class: "control-label" %>
        <%= f.text_field :postal_code, class: "form-control-static postal_code" %>
      </div>
      
      <div class="form-group text-center">
        <%= f.label :"住所" ,class: "control-label" %>
        <%= f.text_field :shipping_address, class: "form-control-static address" %>
      </div>
  
      <div class="form-group text-center">
        <%= f.label :"宛名" ,class: "control-label" %>
        <%= f.text_field :name, class: "form-control-static name" %>
      </div>
      <div class="text-center mb-5">
        <%= f.submit '登録する' ,class: "pull-right btn-lg btn-success " %>
      </div>
      <% end %>
      <div class="col-md-12">
      <%= render "ships_index", shipping_addresses: @shipping_addresses %>
      </div>
    </div>
  </div>
</div>