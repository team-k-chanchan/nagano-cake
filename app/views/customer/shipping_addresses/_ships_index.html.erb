<% if @shipping_addresses.present? %>
  <table class="table table-hover table-bordered table-condensed">
    <thead>
        <tr class="info">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="2"></th>
        </tr>
    </thead>

    <tbody>
      <% shipping_addresses.each do |shipping_address| %>
        <tr class="shipping-tr" id="destroy-<%= shipping_address.id %>">
            <td>
                <%= shipping_address.postal_code %>
            </td>
            <td class="text-left">
                <%= shipping_address.shipping_address %>
            </td>
            <td class="text-left">
                <%= shipping_address.name %>
            </td>
            <td>
                <%= link_to "編集する",edit_customer_shipping_address_path(shipping_address), class: "glyphicon glyphicon-pencil btn-sm btn-primary" %>
            </td>
            <td>
                <%= link_to "削除する",customer_shipping_address_path(shipping_address), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, remote: true, class: "glyphicon glyphicon-trash btn-sm btn-danger destroy_book_#{shipping_address.id}" %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>