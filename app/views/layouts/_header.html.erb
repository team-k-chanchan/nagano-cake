<header class="bg-light">
  <div class="container">
    <div class="row">
      <div class="col-5">
         <a class="navbar-brand p-3 text-dark" href="/"><%= image_tag('logo2.png', size: "70x70") %>　NAGANO CAKE</a>
      </div>
      <div class="col-7 d-flex align-items-end justify-content-center flex-column">
        <div class="row mr-1">
        <% if customer_signed_in? %>
          <div class="mb-2">こんにちは <span class="font-weight-bold text-info h5"><%= current_customer.kana_last_name %><%= current_customer.kana_first_name %></span> さん</div>
        <% elsif admin_signed_in? %>
          <div class="mb-2">こんにちは <span class="font-weight-bold text-danger h5">管理者</span> さん</div>
        <% else %>
          <div class="mb-2">こんにちは <span class="font-weight-bold h5" >ゲスト</span> さん</div>
        <% end %>
        </div>
        <div class="row">
          <% if customer_signed_in? %>
          <div class="d-flex">
            <div class="float"><%= link_to 'My page',customer_customers_path,class: 'nav-link text-dark' %></div>
            <div class="float"><%= link_to 'Products',customer_items_path,class: 'nav-link text-dark' %></div>
            <div class="float"><%= link_to 'Cart',customer_cart_items_path ,class: 'nav-link text-dark' %></div>
            <div class="float"><%= link_to 'Log out', destroy_customer_session_path, method: :delete,class: 'nav-link text-dark' %></div>
          </div>
          <% elsif admin_signed_in? %>
          <div class="d-flex">
            <div class="float"><%= link_to 'Products',admin_items_path,class: 'nav-link text-dark' %></div>
            <div class="float"><%= link_to 'Customers',admin_customers_path,class: 'nav-link text-dark' %></div>
            <div class="float"><%= link_to 'Orders',admin_orders_path,class: 'nav-link text-dark' %></div>
            <div class="float"><%= link_to 'Genres',admin_genres_path,class: 'nav-link text-dark' %></div>
            <div class="float"><%= link_to 'Log out',destroy_admin_session_path,method: :delete,class: 'nav-link text-dark' %></div>
          </div>
          <% else %>
          <div class="d-flex">
            <div class="float"><%= link_to 'About',about_path,class: 'nav-link text-dark' %></div>
            <div class="float"><%= link_to 'Products',customer_items_path,class: 'nav-link text-dark' %></div>
            <div class="float"><%= link_to 'Sign up', new_customer_registration_path,class: 'nav-link text-dark' %></div>
            <div class="float"><%= link_to 'Login', new_customer_session_path ,class: 'nav-link text-dark'%></div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>