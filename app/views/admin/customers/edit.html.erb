<% provide(:title, "会員情報編集") %>
  <h2 class="page-header"><%= full_name(@customer) %>さんの会員情報編集</h2>
    <div class="row">
    <%= form_with(model: @customer, url:admin_customer_path, local: true ,method: :patch) do |f| %>
      <div class="row inline-block mb-3">
        <%= render "layouts/error_msg", model: @customer %>
        <div class="col-4">会員ID</div>
        <div class="col-4"><%= @customer.id %></div>
      </div>
      <div class="row inline-block mb-3">
        <div class="col-4"><%= f.label "氏名" %></div>
        <div class="col-4"><%= f.text_field :last_name, class: 'form-control' %></div>
        <div class="col-4"><%= f.text_field :first_name, class: 'form-control' %></div>
      </div>
      <div class="row inline-block mb-3">
        <div class="col-4"><%= f.label "フリガナ" %></div>
        <div class="col-4"><%= f.text_field :kana_last_name, class: 'form-control' %></div>
        <div class="col-4"><%= f.text_field :kana_first_name, class: 'form-control' %></div>
      </div>
      <div class="row inline-block mb-3">
        <div class="col-4"><%= f.label "郵便番号" %></div>
        <div class="col-4"><%= f.text_field :postal_code, class: 'form-control' %></div>
      </div>
      <div class="row inline-block mb-3">
        <div class="col-4"><%= f.label "住所" %></div>
        <div class="col-8"><%= f.text_field :address, class: 'form-control' %></div>
      </div>
      <div class="row inline-block mb-3">
        <div class="col-4"><%= f.label "電話番号" %></div>
        <div class="col-4"><%= f.text_field :phone_number, class: 'form-control' %></div>
      </div>
      <div class="row inline-block mb-3">
        <div class="col-4"><%= f.label "メールアドレス" %></div>
        <div class="col-4"><%= f.text_field :email, class: 'form-control' %></div>
      </div>
      <div class="row inline-block mb-3">
        <div class="col-4"><%= f.label "会員ステータス" %></div>
        <div class="col-4"><%= f.radio_button :is_deleted, false %>　<%= f.label :is_deleted, "有効", value: false %></div>
        <div class="col-4"><%= f.radio_button :is_deleted, true %>　<%= f.label :is_deleted, "退会", value: true %></div>
      </div>
    <div class="row"><%= f.submit '変更を保存', class: 'btn btn-success' %></div>
    <% end %>
  </div>