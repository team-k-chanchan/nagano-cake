<div class="container">
  <h2 class="page-header mt-4 mb-4">注文履歴一覧</h2>
  <div class="row">
    <div class="col-lg-1 col-md-0 col-sm-0"></div>
    <div class="col-lg-10 col-md-12 col-sm-12">
      <table class="table table-hover orders-table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime("%Y年%m月%d日 %H:%M:%S"), admin_order_path(order),class:"rspecorder" %></td>
              <td><%= full_name(order.customer.id) %></td>
              <td><%= order.order_details.sum(:quantity) %></td>
              <td><%= order.order_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
   <div class="row offset-5">
    <%= paginate @orders %>
  </div>
  </div>
</div>