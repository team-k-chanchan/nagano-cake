<% provide(:title, "商品詳細ページ") %>
<div class="container">
  <h2 class="page-header mt-4 mb-4">商品詳細ページ</h2>
    <div class="row">
      <div class="item-show">
        <%= attachment_image_tag @item, :image, :fill, 344, 250, fallback: "no-image.jpg", size:'344x250' %>
      </div>
      <div class="item-introduction ml-5">
        <table class="table">
          <div class="row">
            <p class="item">商品名</p>
            <p class="item-li"><%= @item.name %></p>
          </div>
          <div class="row">
            <p class="item">商品説明</p>
            <p class="item-li"><%= @item.introduction %></p>
          </div>
          <div class="row">
            <p class="item">ジャンル</p>
            <p class="item-li"><%= @item.genre.name %></p>
          </div>
          <div class="row">
            <p class="item">税込価格(税抜価格)</p>
            <p class="item-li"><%= (@item.price * 1.1).to_i.to_s(:delimited) %>(<%= (@item.price).to_s(:delimited) %>)円</p>
          </div>
          <div class="row">
              <div class="item">販売ステータス</div>
              <div class="item-li">
                 <% if @item.sales_status %>
                  <p>販売中</p>
                 <% else %>
                  <p>販売停止中</p>
                 <% end %>
              </div>
          </div>
          <%= link_to "編集する", edit_admin_item_path(@item), class:'btn btn-success' %>
        </table>
      </div>
    </div>
</div>
